{% extends 'base.html.twig' %}

{% block body %}

    <div class="container w-25 mt-4">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {{ form_start(loginForm) }}
    <div class="mb-3">
        {{ form_row(loginForm._username, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(loginForm._password, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
        <p class="text-center mt-2 mb-0">OR</p>
        <p class="text-center"><a class="text-center" href="/register">Sign up</a></p>
    {{ form_end(loginForm) }}
    </div>
{% endblock %}